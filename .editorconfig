# EditorConfig: http://EditorConfig.org
root = false

# Unix-style newlines at the bottom of every file
[*]
end_of_line = lf
charset = utf-8

# Tab indentation
indent_style = space
indent_size = 4

# Make sure every file has a blank line at the end
insert_final_newline = true

# Remove any whitespace characters preceding newline characters
trim_trailing_whitespace = true

# Give operators breathing room, but not brackets
spaces_around_operators = true
spaces_around_brackets = false

[*.{json,sh,yml,yaml}]
indent_size = 2

# To match the Google Java Style Guide: https://google.github.io/styleguide/javaguide.html
[*.{gradle,java}]
indent_size = 2
max_line_length = 100
